# Alpaca Trading API
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_PAPER=true

# Database Configuration (PostgreSQL)
# For local development: postgresql://user:password@localhost:5432/btc_trading_bot
# For Render: Will be set automatically as DATABASE_URL
DATABASE_URL=postgresql://localhost:5432/btc_trading_bot

# Bitstamp API (if needed in future)
BITSTAMP_API_KEY=
BITSTAMP_SECRET=

# Trading Strategy Parameters
RSI_WINDOW=14
RSI_OVERSOLD=30
RSI_OVERBOUGHT=70
SMA_WINDOW=50
ATR_WINDOW=14
VOLATILITY_THRESHOLD=5.0

# Position Sizing
RISK_PERCENT_PER_TRADE=1.0
STOP_LOSS_PERCENT=3.0

# Trading Schedule
TRADING_ENABLED=true
TRADING_INTERVAL_MINUTES=1

# Application Settings
DEBUG=false
LOG_LEVEL=INFO
PORT=10000

# Notifications (for future Discord/Telegram integration)
DISCORD_WEBHOOK_URL=
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
